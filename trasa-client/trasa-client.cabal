cabal-version: 2.2
name:
  trasa-client
version:
  0.4
synopsis:
  Type safe http requests
description:
  http-client integration for trasa
homepage:
  https://github.com/haskell-trasa/trasa
author:
  Andrew Martin
  Kyle McKean
maintainer:
  Andrew Martin <andrew.thaddeus@gmail.com>
  Kyle McKean <mckean.kylej@gmail.com>
  chessai <chessai1996@gmail.com>
license:
  MIT
license-file:
  LICENSE
copyright:
  © 2017-2019 Andrew Martin
  © 2017-2019 Kyle McKean
category:
  Web
build-type:
  Simple

library
  hs-source-dirs:
    src
  exposed-modules:
    Trasa.Client
    Trasa.Client.Implicit
  build-depends:
    , base >= 4.9 && < 5
    , binary >= 0.8 && < 0.9
    , bytestring >= 0.10 && < 0.12
    , case-insensitive >= 1.2 && < 1.3
    , containers >= 0.5 && < 0.7
    , http-client >= 0.5 && < 0.7
    , http-media >= 0.6 && < 0.9
    , http-types >= 0.9 && < 0.13
    , text >= 2.0 && < 2.1
    , trasa >= 0.4 && < 0.5
  default-language:
    Haskell2010
  ghc-options:
    -Wall -O2

